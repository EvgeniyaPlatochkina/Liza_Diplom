<Window x:Class="diplomliza1.View.WindowEmplooe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:diplomliza1.View"
        mc:Ignorable="d"
        Title="WindowEmplooe" Height="450" Width="800"
        Background="LightBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="DarkBlue">

        <Button Height="50"
                    Content="Новости"
                    Command="{Binding NewsPageButton}"
                    />

        <Button Height="50"
                    Content="Резюме"
                    Command="{Binding MainPageButton}"
                   />

        <Button Height="50"
                    Content="Сотрудники"
                    Command="{Binding StaffPageButton}"
                   />

        <Button Height="50"
                    Content="Вакансия"
                    Command="{Binding JobTitlePageButton}"
                    />


      

        </StackPanel>
        <UserControl x:Name="EmploeePage" Grid.Column="1"/>

    </Grid>
</Window>
